#!/usr/bin/env perl

use strict;

use Sparrow::Constants;
use Sparrow::Commands::Plugin;
use Sparrow::Commands::Project;
use Sparrow::Commands::Swat;
use Sparrow::Misc;
use Carp;

unless (@ARGV) {
    usage();
    exit;
}

my $object = shift @ARGV;

# initialization part 

init_sparrow_env();

if ($object eq  'plg'){

    my $action = shift @ARGV;

    if ( $action eq 'list') {

        my $options = join ' ', @ARGV;

        if ($options =~ /--installed/){
            show_installed_plugins();
        } else {
            show_plugins();
        }

    } elsif ( $action eq 'install'){

        install_plugin( shift @ARGV );        

    } elsif( $action  eq 'remove'){

        remove_plugin( shift @ARGV );        

    } elsif( $action  eq 'upload'){

        upload_plugin();        

    } elsif ( $action  eq 'show'){

        show_plugin( shift @ARGV );        

    } elsif ( $action )  { 

        confess "unknown command: $action @ARGV";

    } else { # default plugin action

        show_plugin( shift @ARGV );        
    }

} elsif ($object eq  'project'){

    my $action = shift @ARGV;

    if ( $action eq 'list') {

        show_projects();

    } elsif ( $action eq 'create') {

        my $name = shift @ARGV;

        create_project($name);

    } elsif ( $action eq 'show') {

        my $name = shift @ARGV;

        project_info($name);

    } elsif ( $action eq 'remove') {

        my $name = shift @ARGV;

        remove_project($name);

    } elsif ( $action eq 'check_add') {

        my $name = shift @ARGV;

        check_add($name, @ARGV);

    } elsif ( $action eq 'check_show' ){

        my $name = shift @ARGV;

        check_show($name, @ARGV);

    } elsif( $action  eq 'check_run'){

        my $name = shift @ARGV;

        check_run($name, @ARGV);

    } elsif( $action  eq 'check_remove'){

        my $name = shift @ARGV;

        check_remove($name, @ARGV);


    } elsif ( $action )  { 

        confess "unknown command: $action @ARGV";

    } else { # default project action

        my $name = shift @ARGV;

        project_info($name);
    }

} else {

    confess "unknown command: $object @ARGV";

}

