#!/usr/bin/env perl

use strict;

use Sparrow::Constants;

use Sparrow::Commands::Project;
use Sparrow::Commands::Plugin;
use Sparrow::Commands::CheckPoint;
use Sparrow::Commands::Index;

use Sparrow::Misc;

use Carp;

unless (@ARGV) {
    usage();
    exit;
}

my $object = shift @ARGV;

# initialization part 

init_sparrow_env();

unless (-f spi_file()){
    update_index();
}

if ($object eq  'plg'){

    my $action = shift @ARGV;

    if ( $action eq 'list') {

        show_installed_plugins();

    } elsif ( $action eq 'search') {

        search_plugins(@ARGV);

    } elsif ( $action eq 'install'){

        install_plugin( @ARGV );        

    } elsif( $action  eq 'remove'){

        remove_plugin( shift @ARGV );        

    } elsif( $action  eq 'upload'){

        upload_plugin();        

    } elsif ( $action  eq 'show'){

        show_plugin( shift @ARGV );        

    } else  { 

        confess "unknown command: $action @ARGV";

    }

} elsif ($object eq  'index'){

    my $action = shift @ARGV;

    if ( $action eq 'update') {

        update_index();

    }elsif ( $action eq 'summary') {

        index_summary();

    }else{

        confess "unknown command: $action @ARGV";

    }

} elsif ($object eq  'project'){

    my $action = shift @ARGV;

    if ( $action eq 'list') {

        projects_list();

    } elsif ( $action eq 'create') {

        my $name = shift @ARGV;

        project_create($name);

    } elsif ( $action eq 'show') {

        my $name = shift @ARGV;

        project_show($name, @ARGV);

    } elsif ( $action eq 'remove') {

        my $name = shift @ARGV;

        project_remove($name);

    } else  { 

        confess "unknown command: $action @ARGV";

    }

} elsif ($object eq  'check') {

    my $action = shift @ARGV;

    if ( $action eq 'add') {

        my $name = shift @ARGV;

        check_add($name, @ARGV);

    } elsif ( $action eq 'ini' ) {

        my $name = shift @ARGV;

        check_ini($name, @ARGV);

    } elsif ( $action eq 'load_ini' ) {

        my $name = shift @ARGV;

        check_load_ini($name, @ARGV);

    } elsif ( $action eq 'set') {

        my $name = shift @ARGV;

        check_set($name, @ARGV);

    } elsif ( $action eq 'show' ){

        my $name = shift @ARGV;

        check_show($name, @ARGV);

    } elsif( $action  eq 'run'){

        my $name = shift @ARGV;

        check_run($name, @ARGV);

    } elsif( $action  eq 'remove'){

        my $name = shift @ARGV;

        check_remove($name, @ARGV);

    } else  { 

        confess "unknown command: $action @ARGV";

    }

}

